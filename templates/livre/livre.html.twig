{% extends 'admin/base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}

<table class="table table-bordered">

    <thead class="thead-dark">
            <tr>
                <th> Titre du Livre</th>
                <th>Auteur</th>
            </tr>
    </thead>
    <tbody>
        {% for livres in liste %}
            <tr>

                <td style="border: 1px solid black;">{{livres.titre}}</td>
                <td style="border: 1px solid black;">{{livres.auteur}}</td>

            </tr>
        {% endfor %}
    </tbody>

</table>




{% endblock %}
