{% extends 'admin/base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ categorie.titre }}</td>
            </tr>
            <tr>
                <th>Mots</th>
                <td>{{ categorie.mots }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Les livres de la cat√©gorie {{ categorie.titre }}</h2>

    <table class="table">
        <thead>
            <th>Titre du livre</th>
            <th>Auteur</th>
        </thead>
        {% for livre in livreCategorie %}{#ou alors for livre in categorie.livres #}
            <tr>
                <td>{{livre.titre}}</td>
                <td>{{livre.auteur}}</td>
                <td><a href="{{path("livre_show", {id: livre.id})}}">Voir le livre</a></td>
            </tr>
        {% endfor %}
    </table>

    <a href="{{ path('categorie_index') }}">back to list</a>

    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>

    {{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
